{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "application"
      },
      {
        "source": "/users",
        "function": "application"
      },
      {
        "source": "/call",
        "function": "application"
      },
      {
        "source": "/volunteer",
        "function": "application"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}